{
  "name": "murder-king",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:cdaringe/murder-king.git",
  "author": "cdaringe <christopher.dieringer@gmail.com>",
  "license": "MIT",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "format": "prettier-standard 'packages/ui/src/**/*.ts' 'packages/ui/src/**/*.tsx' 'packages/server/src/**/*.js'",
    "precommit": "lint-staged",
    "lint": "echo 'skipping standard :('"
  },
  "lint-staged": {
    "linters": {
      "packages/*/src/**/*.tsx?": [
        "prettier-standard",
        "git add"
      ]
    },
    "linters": {
      "packages/*/src/**/*.jsx?": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^3.1.4",
    "lint-staged": "^7.2.2",
    "prettier-standard": "^8.0.1",
    "standard": "^11.0.1"
  }
}
